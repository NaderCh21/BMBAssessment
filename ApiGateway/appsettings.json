{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gateway-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "Jwt": {
    "Key": "THIS IS A HARD CODED SECRET KEY FOR THE ASSESSMENT",
    "Issuer": "ApiGateway",
    "Audience": "ApiGatewayAudience"
  },

  "ReverseProxy": {
    "Routes": {
      "productRoute": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/api/product/{**catch-all}"
        }
      },
      "orderRoute": {
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/api/order/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "productCluster": {
        "Destinations": {
          "productService": {
            "Address": "http://localhost:5211/"
          }
        }
      },
      "orderCluster": {
        "Destinations": {
          "orderService": {
            "Address": "http://localhost:5142/"
          }
        }
      }
    }
  },

  "AllowedHosts": "*"
}
