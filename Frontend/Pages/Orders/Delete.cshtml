@page "{id:int}"
@model Frontend.Pages.Orders.DeleteModel

<h2 class="mb-4 text-danger">Delete Order</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this order?</strong>
</div>

<!-- Order Info -->
<table class="table table-bordered w-50">
    <tr>
        <th>Order ID</th>
        <td>@Model.OrderId</td>
    </tr>
    <tr>
        <th>Client</th>
        <td>@Model.ClientName</td>
    </tr>
    <tr>
        <th>Date</th>
        <td>@Model.OrderDate.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Total Amount</th>
        <td>@Model.Total</td>
    </tr>
</table>

<!-- Validation Errors -->
<div asp-validation-summary="All" class="text-danger mb-3"></div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
